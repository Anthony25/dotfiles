#!/bin/bash

wmname LG3D
bspc config border_width        1
bspc config window_gap          3

bspc config split_ratio         0.5
bspc config borderless_monocle  true
bspc config gapless_monocle     false
bspc config ignore_ewmh_focus   true
bspc config click_to_focus      true
bspc config remove_disabled_monitors false
bspc config remove_unplugged_monitors false

bspc monitor LVDS-1 -d a
bspc monitor VGA-1 -d "="
bspc monitor -a  s d f u i o p 7 8 9 0 ")"
bspc config top_padding 18

sleep 1
xsetroot -cursor_name left_ptr &
feh --bg-fill ~/.config/qtile/wallpaper.jpg &
~/git/github/barython/laptop.py &
light-locker --lock-on-suspend --lock-after-screensaver=3  &
xset dpms 180 180 180 &
xset -b &
xset s 180 &
xcalib -d :0 ~/.icc/n55sf.icc
setxkbmap -layout us -option compose:ralt &
compton &

sleep 1
nm-applet &
redshift-gtk &
clipit &
owncloud &
sxhkd &

sleep 2
trayer --edge top --align right --expand false --margin 410 --widthtype request --height 18 --alpha 0 --transparent true --tint 0xFF2d2d2d --monitor "primary" --SetDockType true --SetPartialStrut false --iconspacing 5 &
/usr/lib/xfce-polkit/xfce-polkit &

sleep 1
xdo above -t $(xwininfo -root -children  | egrep -o "^ +.x[^ ]+" | tail -1 | tr -d " ") $(xdo id -a panel) $(xdo id -a bar)

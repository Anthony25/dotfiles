#!/bin/bash

autorandr -c -f
xrandr --dpi 96

bspc config wm_name             LG3D
bspc config border_width        1
bspc config window_gap          3

bspc config split_ratio         0.5
bspc config borderless_monocle  true
bspc config gapless_monocle     false
bspc config focus_by_distance   true
bspc config ignore_ewmh_focus   true
bspc config click_to_focus      button1
bspc config merge_overlapping_monitors true
bspc config remove_disabled_monitors true
bspc config remove_unplugged_monitors true

bspc monitor HDMI-A-0 -d s
bspc monitor DisplayPort-0 -d d
bspc monitor DisplayPort-2 -d a
bspc monitor -a f u i o p 7 8 9 0 ")"
# bspc monitor HDMI-0 -s DVI-D-0
bspc config top_padding 18

bspc rule -a '*:libreoffice' state=tiled

sleep 1
xsetroot -cursor_name left_ptr &
feh --bg-fill ~/.config/bspwm/wallpaper &
python ~/git/github/barython/test.py &
light-locker --no-lock-on-suspend &
xset -dpms &
xset s off &
xset -b &
setxkbmap -layout us -option compose:ralt &
compton --vsync-use-glfinish  &
/usr/lib/geoclue-2.0/demos/agent &

DISPWIN_HELP=`dispwin -h 2>&1`
dispwin -d `echo "$DISPWIN_HELP" | grep HDMI-A-0 | awk '{print $1}'` ~/.config/bspwm/lg_ips236.icc
dispwin -d `echo "$DISPWIN_HELP" | grep DisplayPort-0 | awk '{print $1}'` ~/.config/bspwm/hyundai_hdw220d.icc
dispwin -d `echo "$DISPWIN_HELP" | grep DisplayPort-2 | awk '{print $1}'` ~/.config/bspwm/dell_u2715h.icc

sleep 1
nm-applet &
redshift-gtk &
clipit &
nextcloud &
sxhkd &
indicator-kdeconnect&

sleep 2
trayer --edge top --align right --expand false --margin 300 --widthtype request --height 18 --alpha 0 --transparent true --tint 0xFF2d2d2d --monitor "primary" --SetDockType true  --iconspacing 5 &
nvidia-settings --load-config-only &
/usr/lib/xfce-polkit/xfce-polkit &

sleep 1
xdo above -t $(xwininfo -root -children  | egrep -o "^ +.x[^ ]+" | tail -1 | tr -d " ") $(xdo id -a panel) $(xdo id -a bar)
